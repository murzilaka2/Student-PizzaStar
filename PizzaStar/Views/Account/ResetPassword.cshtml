@using PizzaStar.ViewModels;
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Сброс пароля";
}

<div class="container-full">
    <div class="row justify-content-center">
        <div class="col-sm-4">
            <div class="well mt-5">
                <h3>Cброс пароля</h3>
                <p>Для email адреса - <b>@Model.Email</b></p>
                <div class="justify-content-md-start">

                    <form asp-controller="Account" asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Новый пароль</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordConfirm" class="control-label">Подтвердите пароль</label>
                            <input asp-for="PasswordConfirm" class="form-control" />
                            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="Token" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-primary">
                                <span>Подтвердить</span>
                                <cite class="liquid"></cite>
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


@*Для валидации модели на клиенте*@
@await Html.PartialAsync("_ValidationScriptsPartial")