
<select form="pageform" name="options.searchpropertyname" class="form-control">
    @foreach (string s in ViewBag.searches as string[])
    {
        string value = s.IndexOf('.') == -1 ? s : s.Substring(s.IndexOf('.') + 1);
        <option value="@s" selected="@(Model.Options.SearchPropertyName == s)">
            @(
                s switch
                {
                    "Email" => "Емейл",
                    "PhoneNumber" => "Телефон",
                    "Name" => "Название",
                    "Description" => "Описание",
                    "Brand" => "Бренд",
                    "Category.Name" => "Категория",
                    "Address" => "Адрес",
                    "City" => "Город",
                    "Phone" => "Телефон (Незарегистрированный)",
                    "User.PhoneNumber" => "Телефон",
                    _ => value
                }
                )
        </option>
    }
</select>

<input form="pageform" name="options.searchterm" value="@Model.Options.SearchTerm" placeholder="Поиск..." class="form-control input-lg ui-autocomplete-input" />
<span class="btn-search input-group-btn">
    <button form="pageform" type="submit" class="btn btn-default btn-lg"><i class="fa fa-search"></i></button>
</span>

